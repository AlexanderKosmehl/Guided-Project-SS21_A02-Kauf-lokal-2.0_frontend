<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="nightly" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorSecondary">@color/teal_500</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <item name="background_color">@color/surface</item>
        <item name="text_color">@color/white</item>
        <item name="invert_text_color">@color/black</item>
        <item name="top_bar_color">@color/purple_500</item>
        <item name="bottom_icon">@color/teal_200</item>
        <item name="bottom_icon_disabled">@color/white</item>
        <item name="item_text_color">@color/item</item>
        <item name="icon_news_color">@color/item</item>
        <item name="switchy">@color/teal_200</item>
    </style>

    <style name="Switch" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorControlActivated">@color/primaryColor</item>
        <item name="colorSwitchThumbNormal">@color/gray_300</item>
        <item name="android:colorForeground">@color/gray_600</item>
    </style>

    <style name="RatingBarTheme" parent="Theme.MaterialComponents.DayNight">
        <item name="colorControlNormal">@color/gray_600</item>
        <item name="colorControlActivated">@color/star_fill</item>
    </style>

    <style name="CardTheme" parent="Theme.MaterialComponents.DayNight">
        <item name="android:clickable">@color/white</item>
        <item name="un_clickable">@color/card_color_unclickable</item>
    </style>
</resources>