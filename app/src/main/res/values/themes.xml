<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="lightly" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/primaryComplementary</item>
        <item name="colorSecondaryVariant">@color/primaryComplementaryLight</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <item name="background_color">@color/white</item>
        <item name="text_color">@color/black</item>
        <item name="top_bar_color">@color/primaryColor</item>
        <item name="bottom_icon">@color/primaryComplementary</item>
        <item name="bottom_icon_disabled">@color/black</item>
        <item name="item_text_color">@color/item</item>
        <item name="icon_news_color">@color/item</item>
        <item name="switchy">@color/primaryComplementary</item>
