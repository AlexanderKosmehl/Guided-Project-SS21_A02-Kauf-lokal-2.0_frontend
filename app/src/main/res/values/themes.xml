    <style name="Switch" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorControlActivated">@color/primaryComplementaryLight</item>
        <item name="colorSwitchThumbNormal">@color/gray_300</item>
        <item name="android:colorForeground">@color/gray_600</item>
    </style>

    <style name="RatingBarTheme" parent="Theme.MaterialComponents.Light">
        <item name="colorControlNormal">@color/gray_600</item>
        <item name="colorControlActivated">@color/star_fill</item>
    </style>
